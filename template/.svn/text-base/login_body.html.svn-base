{include file="template/overall_header.html"}

<script type="text/javascript" src="{$BASE_URL}/js/login.js"></script>

{if $LOGIN_ERROR}
<script type="text/javascript">
$().ready(function(){
	$("#login-error").show("slow");
});
</script>
{/if}

<div id="login">
	<div class="pad">
		<form action="{$BASE_URL}/auth.php" method="post" id="loginform">
		<fieldset>

			<input type="hidden" name="redirect" value="{$REDIRECT_URL}" />
			<div class="form padding">

				{if $LOGIN_ERROR}
				<div class="ui-widget row" id="login-error" style="display: none;">
					<div class="ui-state-error ui-corner-all pad"> 
						<span class="error ico">Login Error!</span> Please try again or contact our staff at {$COMPANY_PHONE} for assistance.
					</div>
				</div>
				{/if}
				
				<div class="row">
					<label for="username" class="error" title="You must enter your username to authenticate.">&nbsp;</label>
					<label for="username">Email</label>
					<input class="ui-input" type="text" tabindex="1" name="username" id="username" value="{$USERNAME}" style="width: 300px;" />
				</div>
				
				<div class="row">
					<label for="password" class="error" title="Your password is required to authenticate.">&nbsp;</label>
					<label for="password">Password</label>
					<input class="ui-input" type="password" tabindex="2" id="password" name="password" style="width: 300px;" />
				</div>
				
				<div class="row">
					<input type="checkbox" name="persist" id="persist" value="true" class="ui-custom-input" />
					<label for="persist">Remember Me</label>
				</div>
				
				<div id="errors"></div>
				
				<div class="row">
					<button type="submit" name="login" tabindex="6">
						<span class="approve">Authenticate</span>
					</button>
				</div>

			</div>

		</fieldset>
		</form>
	</div>
</div>

{include file="template/overall_footer.html"}